<Window x:Class="Apress.MVCRecipes.DBInstaller.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ASP.NET MVC 4 Recipes Database Installer" Height="350" Width="525" Loaded="Window_Loaded_1">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#FF8CAFF9" Offset="1"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid>
        <ComboBox x:Name="ServersComboBox" HorizontalAlignment="Left" Margin="63,63,0,0" VerticalAlignment="Top" Width="367" SelectionChanged="ServersComboBox_SelectionChanged"/>
        <TextBlock x:Name="SearchingLabel" Text="Searching for local databases. Please Wait..." Foreground="#FFF7F6F6" HorizontalAlignment="Left" Margin="63,17,0,0" VerticalAlignment="Top" Width="auto" Height="auto" TextWrapping="WrapWithOverflow"/>
        <Button x:Name="CreateDatabaseButton" Content="Create Sample Database" HorizontalAlignment="Left" Margin="163,110,0,0" VerticalAlignment="Top" Width="153" RenderTransformOrigin="1.533,0.45" Click="CreateDatabaseButton_Click" ToolTip="Click to create the sample database" Height="30" Visibility="Collapsed"/>
    </Grid>
</Window>
